{
    // Hush CMake
    "cmake.configureOnOpen": false,

    // IntelliSense
    "C_Cpp.default.compilerPath": "${userHome}/bin/zephyr-sdk-0.16.4/xtensa-espressif_esp32_zephyr-elf/bin/xtensa-espressif_esp32_zephyr-elf-gcc",

    "C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",

    
    // File Associations
    "files.associations": {
        "gpio.h": "c",
        "kernel.h": "c",
        "bit": "cpp",
        "cstddef": "cpp",
        "cwchar": "cpp",
        "memory": "cpp",
        "type_traits": "cpp",
        "functional": "cpp",
        "limits": "cpp",
        "utility": "cpp",
        "future": "cpp",
        "string": "cpp",
        "format": "cpp",
        "log.h": "c",
        "openthread.h": "c",
        "printk.h": "c",
        "device.h": "c"
    },

    "workspaceFolder": {
        "path": ".",
        "zephyrproject": "%HOMEPATH%/zephyrproject",
        "AppUnderDev": "${workspaceRoot}"
    },
    
    "bsp": {
        "board": "esp32_devkitc_wroom",
    },
    
    "app": {
        "name": "${config:workspaceFolder.AppUnderDev}",
        "build_dir": "${workspaceFolder.AppUnderDev}\\build",
    },
}